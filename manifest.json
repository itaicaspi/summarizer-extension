{
  "name": "summarizer",
  "version": "1.0",
  "description": "",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "webNavigation"],
  "background": {
    "scripts": [
      "jquery.min.js",
      "mercury.web.js",
      "Readability.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/fold16.png",
      "32": "images/fold32.png",
      "48": "images/fold48.png",
      "128": "images/fold128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "jquery.min.js",
        "Readability.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/fold16.png",
    "32": "images/fold32.png",
    "48": "images/fold48.png",
    "128": "images/fold128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
